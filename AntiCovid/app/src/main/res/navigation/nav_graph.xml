<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment">



    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.swtug.anticovid.view.splashScreen.SplashScreenFragment"
        android:label="SplashScreen">
        <action
            android:id="@+id/action_splashFragment_to_termsOfUse"
            app:destination="@id/termsOfUseFragment"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/termsOfUseFragment"
        android:name="com.swtug.anticovid.view.termsOfUse.TermsOfUseFragment"
        android:label="TermsOfUseFragment" >

        <action
            android:id="@+id/action_termsOfUseFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/termsOfUseFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_termsOfUseFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/termsOfUseFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.swtug.anticovid.login.LoginFragment"
        android:label="LoginFragment">

        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"
            />
    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.swtug.anticovid.view.main.MainFragment"
        android:label="MainFragment">
        <action
            android:id="@+id/action_mainFragment_to_addTestReportFragment"
            app:destination="@id/addTestReportFragment" />
        <action
            android:id="@+id/action_mainFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_mainFragment_to_QRCodeFragment"
            app:destination="@id/QRCodeFragment" />
        <action
            android:id="@+id/action_mainFragment_to_testResultFragment"
            app:destination="@id/testResultFragment" />
        <action
            android:id="@+id/action_mainFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_mainFragment_to_notVaccinatedFragment"
            app:destination="@id/notVaccinatedFragment" />
        <action
            android:id="@+id/action_mainFragment_to_vaccinatedFragment"
            app:destination="@id/vaccinatedFragment" />
    </fragment>

    <fragment
        android:id="@+id/addTestReportFragment"
        android:name="com.swtug.anticovid.view.addTestReport.AddTestReportFragment"
        android:label="AddTestReportFragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.swtug.anticovid.view.profile.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/QRCodeFragment"
        android:name="com.swtug.anticovid.view.qrCode.QRCodeFragment"
        android:label="QRCodeFragment" />
    <fragment
        android:id="@+id/testResultFragment"
        android:name="com.swtug.anticovid.view.testResults.TestResultFragment"
        android:label="TestResultFragment" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.swtug.anticovid.view.register.RegisterFragment"
        android:label="RegisterFragment" />
    <fragment
        android:id="@+id/notVaccinatedFragment"
        android:name="com.swtug.anticovid.view.vaccineInfo.NotVaccinatedFragment"
        android:label="NotVaccinatedFragment" >
        <action
            android:id="@+id/action_notVaccinatedFragment_to_vaccinatedFragment"
            app:popUpTo="@id/notVaccinatedFragment"
            app:destination="@id/vaccinatedFragment" />
    </fragment>

    <fragment
        android:id="@+id/vaccinatedFragment"
        android:name="com.swtug.anticovid.view.vaccineInfo.VaccinatedFragment"
        android:label="VaccinatedFragment" >
        <argument
            android:name="vaccination"
            app:argType="com.swtug.anticovid.models.Vaccination" />
        <action
            android:id="@+id/action_vaccinatedFragment_to_QRCodeFragment"
            app:destination="@id/QRCodeFragment" />
    </fragment>

</navigation>